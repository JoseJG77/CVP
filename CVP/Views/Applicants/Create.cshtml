@model CVP.Models.Applicant
@{
    ViewData["Title"] = "Crear Solicitante";
}
<h1>@ViewData["Title"]</h1>
<form id="frmCreate" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

    <script>
        document.getElementById('frmCreate').addEventListener('submit', function(e){
          e.preventDefault();
          Swal.fire({
            title: '¿Confirmar creación?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Sí, crear',
            cancelButtonText: 'No, cancelar'
          }).then(r=> r.isConfirmed && this.submit());
        });
    </script>

