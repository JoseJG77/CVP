@model CVP.Models.Municipality
@{
    ViewData["Title"] = "Crear Municipio/Departamento";
}
<h1 class="text-center mb-5">@ViewData["Title"]</h1>
<form id="frmCreate" asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name">Nombre del Municipio/Departamento</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('frmCreate').addEventListener('submit', function(e){
          e.preventDefault();
          Swal.fire({
            title: '¿Confirmar creación?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Sí, crear',
            cancelButtonText: 'No, cancelar'
          }).then(r=> r.isConfirmed && this.submit());
        });
    </script>
}
