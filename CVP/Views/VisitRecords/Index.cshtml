@model IEnumerable<CVP.Models.VisitRecord>
@{
    ViewData["Title"] = "Visitas";
}
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-primary m-0">Registro de Visitas</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Nueva Visita
        </a>
    </div>
    <br />

    <div class="mb-3">
        <input type="text"
               class="form-control search-input"
               data-target="#visitsTable"
               placeholder="Buscar...">
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-scroll">

            <table id="visitsTable"
                   class="table table-borderless table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="text-center">#</th>
                        <th class="ps-4">Fecha</th>
                        <th>Trámite</th>
                        <th>Solicitante</th>
                        <th>Municipio</th>
                        <th>Género</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = 1;
                    }
                    @foreach (var v in Model)
                    {
                        <tr>
                            <td class="row-index text-center">@counter</td>
                            <td class="ps-4">@v.Date.ToString("dd/MM/yyyy")</td>
                            <td>@v.Procedure.Name</td>
                            <td>@v.Applicant.Name</td>
                            <td>@v.Municipality.Name</td>
                            <td>@(v.Gender == 'M' ? "Hombre" : "Mujer")</td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@v.Id" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
