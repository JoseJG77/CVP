@model IEnumerable<CVP.Models.Procedure>
@{
    ViewData["Title"] = "Tipo de trámite";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-primary m-0">Tipo de trámite</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Nuevo
        </a>
    </div>

    <div class="mb-3">
        <input type="text"
               class="form-control search-input"
               data-target="#proceduresTable"
               placeholder="Buscar...">
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0 table-scroll">
            <table id="proceduresTable"
                   class="table table-borderless table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="text-center">#</th>
                        <th>Categoría</th>
                        <th>Nombre</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var counter = 1;
                    }
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td class="row-index text-center">@counter</td>
                            <td>@p.Category</td>
                            <td>@p.Name</td>
                            <td class="text-end pe-4">
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-2" title="Ver">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-2" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
